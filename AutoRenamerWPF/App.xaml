<Application
    x:Class="AutoRenamer.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:AutoRenamer"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    Startup="Application_Startup"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <system:String x:Key="Version">1.0</system:String>
        <SolidColorBrush
            x:Key="Translucent"
            Opacity="0.4"
            Color="White" />
        <Style x:Key="Large" TargetType="ContentControl">
            <Setter Property="FontSize" Value="28" />
        </Style>
        <Style x:Key="Normal" TargetType="Label">
            <Setter Property="FontSize" Value="18" />
        </Style>
        <Style x:Key="Mini" TargetType="Label">
            <Setter Property="FontSize" Value="15" />
        </Style>
        <Style x:Key="Main" TargetType="MenuItem">
            <Setter Property="FontSize" Value="28" />
        </Style>
        <Style x:Key="Sub" TargetType="MenuItem">
            <Setter Property="FontSize" Value="18" />
        </Style>
        <Style x:Key="Menu" TargetType="Menu">
            <Setter Property="Background" Value="Gray" />
        </Style>
    </Application.Resources>
</Application>
